@model IEnumerable<WebApplication1.Models.Attrezzi>

@{
    ViewBag.Title = "Lista attrezzi";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Lista attrezzi</h2>
<table class="table table-striped table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.id_attrezzo)
            @Html.DisplayNameFor(model => model.nome)
            @Html.DisplayNameFor(model => model.quantita)
            @Html.DisplayNameFor(model => model.dimensione)
            @Html.DisplayNameFor(model => model.prezzo)
            @Html.DisplayNameFor(model => model.peso)
            @Html.DisplayNameFor(model => model.colore)

        </th>
    </tr>
    @foreach(var item in Model)
            {
<tr>
    <td>@Html.DisplayFor(Model => item.id_attrezzo)</td>
    <td>@Html.DisplayFor(Model => item.nome)</td>
    <td>@Html.DisplayFor(Model => item.quantita)</td>
    <td>@Html.DisplayFor(Model => item.dimensione)</td>
    <td>@Html.DisplayFor(Model => item.prezzo)</td>
    <td>@Html.DisplayFor(Model => item.peso)</td>
    <td>@Html.DisplayFor(Model => item.colore)</td>
</tr>
            }
        
</table>

