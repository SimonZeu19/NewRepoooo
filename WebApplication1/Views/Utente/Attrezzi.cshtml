@model IEnumerable<WebApplication1.Models.Attrezzi>
@{
    ViewBag.Title = "Attrezzi";
    Layout = "~/Views/Shared/_LayoutUtente.cshtml";
}
<h2>Lista Atrrezzi</h2>


